@{
    ViewData["Title"] = "Search Movies";
}

<div class="text-center">
    <h1 class="display-4">Search for Movies</h1>
</div>

<div class="search-container text-center mt-3">
    <div class="input-group">
        <input class="form-control" id="movie-search" type="text" placeholder="Search for movies" aria-label="Search for movies" aria-describedby="search-button"/>
        <button class="btn btn-lg btn-outline-primary" id="search-button">Search</button>
    </div>
    <p id="error-message"></p>
</div>
<br>
<div id="results-container">
    <div class="=row">
        <div class="col-md-4" id="poster"></div>
        <div class="col-md-8" id="movieText"></div>
    </div>
</div>
<div id="movie-modal" class="modal fade" tabindex="-1" aria-labelledby="movieModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="movieModalLabel">Movie Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4" id="modal-poster"></div>
                    <div class="col-md-8" id="modal-details"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/api.js"></script>
}

